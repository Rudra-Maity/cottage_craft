<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>

    <div class="container mt-3">
        <div class="row border">
            <% doc.forEach(item=> {%>

                <div class="col-sm-12 p-3 border border-1 text-dark shadow p-3 mb-5 bg-body-tertiary rounded mt-4 ">
                    <img src="data:<%= item.images[0].contentType %>;base64, <%= item.images[0].data.toString('base64') %>"
                        alt="<%= item.images[0].imgname %>" class="img-thumbnail ">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#<%=item.pid%>"
                        data-bs-whatever="@xxx">Update Product</button>


                    <div class="modal fade" id="<%=item.pid%>" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5 text-dark" id="exampleModalLabel">Update Your Product
                                    </h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body text-dark">
                                    <form action="/api/v1/admin/product/update/<%=item.pid%>" method="post">
                                        <div class="mb-3">
                                            <label class="form-label" for="formFile" class="form-label">Default file
                                                input
                                                example</label>
                                            <input class="form-control" type="text" name="name" placeholder="Name"
                                                value="<%=item.name%>">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="formFile" class="form-label">Default file
                                                input
                                                example</label>
                                            <input class="form-control" type="text" name="title" placeholder="Title"
                                                value="<%=item.title%>">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="formFile" class="form-label">Default file
                                                input
                                                example</label>
                                            <textarea class="form-control" name="discription"
                                                placeholder="Description"><%=item.discription%></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="formFile" class="form-label">Default file
                                                input
                                                example</label>
                                            <textarea class="form-control" name="richdiscription

                                                placeholder="Rich Description" ><%=item.richdiscription%></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="formFile" class="form-label">Default file
                                                input
                                                example</label>
                                            <input class="form-control" type="text" name="brand" placeholder="Brand"
                                                value="<%=item.brand%>">>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="formFile" class="form-label">Default file
                                                input
                                                example</label>
                                            <input class="form-control" type="number" name="price" placeholder="Price"
                                                value="<%=item.price%>">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="formFile" class="form-label">Default file
                                                input
                                                example</label>
                                            <input class="form-control" type="number" name="instock"
                                                placeholder="Instock" value="<%=item.instock%>">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="formFile" class="form-label">Default file
                                                input
                                                example</label>
                                            <input class="form-control" type="number" name="rating" placeholder="Rating"
                                                min="0.0" max="5.0" value="<%=item.rating%>">
                                        </div>
                                        <!-- <div class="mb-3">
                                    <label class="form-label" for="formFile" class="form-label">Default file input example</label>
                                    <input  class="form-control" type="date" name="date" placeholder="date" >
                                </div> -->

                                        <div class="mb-3">
                                            <label class="form-label" for="formFile" class="form-label">Default file
                                                input
                                                example</label>
                                            <input class="form-control" type="text" name="width" placeholder="width"
                                                value="<%=item.width%>">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="formFile" class="form-label">Default file
                                                input
                                                example</label>
                                            <input class="form-control" type="text" name="height" placeholder="height"
                                                value="<%=item.height%>">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="formFile" class="form-label">Default file
                                                input
                                                example</label>
                                            <input class="form-control" type="text" name="weight" placeholder="weight"
                                                value="<%=item.weight%>">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Send message</button>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <%})%>
        </div>
    </div>

    <nav class="mt-4 ml-4" aria-label="...">
        <ul class="pagination">
          <% for(let i=1;i<=pageLength;i++){ %>
            <% if(i===page){%>
          <li class="page-item active ml-2"><a class="page-link" href="/api/v1/admin/product/viewProduct/<%=i%>"><%=i%></a>
          </li>
          <%} else{%>
            <li class="page-item"><a class="page-link" href="/api/v1/admin/product/viewProduct/<%=i%>"><%=i%></a>
            </li>
          <%}%>
          <%}%>
        </ul>
      </nav>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
    <footer id="footer"></footer>
    <script src="/footer.js"></script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=doc.title%></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
         .full-width-card {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            margin: 0;
            width: 100%;
            box-shadow: 0px -5px 15px rgba(0, 0, 0, 0.3); /* Add shadow to the bottom */
        }
        </style>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
</head>

<body>
    <nav class="navbar bg-body-tertiary shadow-lg p-3 mb-3 bg-body rounded  ">
        <div class="container-fluid">
            <a href="" class="navbar-brand">logo</a>
            <a href="/api/v1/user/viewcart">

                <svg style="width: 26px; height: 26px; margin-left: 40px;" xmlns="http://www.w3.org/2000/svg" width="18"
                    height="18" fill="currentColor" class="bi bi-cart bg-white bg-gradient ml-6 dis"
                    viewBox="0 0 16 16">
                    <path
                        d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
            </a>
            <i class="pd-3 fa fa-search" data-bs-toggle="modal" data-bs-target="#myModal"
                style="font-size:24px;cursor: pointer;"></i>
            <div class="modal" id="myModal">
                <div class="modal-dialog modal-fullscreen">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header ">
                            <div class="form-group form-group-lg">

                                <form action="/search" class="d-flex mt-2 navSearch" role="search" name="q">
                                    <input style="border-top: none;    
                            border-left: none;  
                            border-right: none;  
                            border-radius: 0;    
                            outline: none;       
                            box-shadow: none; width: 63vw;" class="form-control navSearch" type="search"
                                        placeholder="Search" aria-label="Search">
                                    <button class=" btn btn-outline-secondary" type="search">Search</button>
                                </form>
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            Modal body..
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </nav>
    
    <!-- Slider  -->
    <div id="demo" class=" carousel slide" data-bs-ride="carousel">

        <!-- Indicators/dots -->
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
          <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
          <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
        </div>
    
        <!-- The slideshow/carousel -->
        <div class="carousel-inner">
          <%for(let i=0;i<doc.images.length;i++){%>
            <%if(i===0){%>
          <div class="carousel-item active">
           <img src="data:<%= doc.images[i].contentType %>;base64, <%= doc.images[i].data.toString('base64') %>" alt="<%= doc.images[i].imgname %>"  class="d-block"
              style="width:100%;height: 20%;">
          </div>
          <%} else{%>
          <div class="carousel-item ">
           <img src="data:<%= doc.images[i].contentType %>;base64, <%= doc.images[i].data.toString('base64') %>" alt="<%= doc.images[i].imgname %>"  class="d-block"
              style="width:100%;height: 20%;">
          </div>
          <%}%>
          <%}%>
        </div>
      <
        <!-- Left and right controls/icons -->
        <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
          <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
          <span class="carousel-control-next-icon"></span>
        </button>
      </div>
    

      <div class="card">
            <div class="card-body mb-3">
                <h5 class="card-title"><%=doc.name %></h5>
                <p class="text-primary" style="font-size: 130%;">&#8377; <%=doc.price %></p>
                <p class="text-success" style="font-size: 140%; "> <%=doc.rating %></p>
            </div>
        
        
        <!-- discription  -->
        <div class="card-header mt-2">
       
        </div>
        <div class="card-body">
          <h5 class="card-title">discription</h5>
          <p class="card-text">  <%=doc.discription%></p>
        </div>
      </div>

      <!-- accordion for rich discription -->
      <div class="accordion mt-3" id="accordionExample">
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
             <h3>Rich discription</h3>
            </button>
          </h2>
          <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
            <div class="accordion-body">
              <%=doc.richdiscription %>
            </div>
          </div>
        </div>
        <div class="accordion-item mt-3">
          <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
              <h3>Specification</h3>
            </button>
          </h2>
          <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
            <div class="accordion-body">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">brand</th>
                    <th scope="col">Price</th>
                    <th scope="col">category</th>
                    <th scope="col">weight</th>
                    <th scope="col">isfeatured</th>
                    <th scope="col">deltime</th>
                    <th scope="col">height</th>
                    <th scope="col">width</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td><%=doc.brand || "N/A"%></td>
                    <td><%=doc.price || "N/A"%></td>
                    <td><%=doc.category|| "N/A"%></td>
                    <td><%=doc.weight|| "N/A"%></td>
                    <td><%=doc.isfeatured|| "N/A"%></td>
                    <td><%=doc.deltime|| "N/A"%></td>
                    <td><%=doc.height|| "N/A"%></td>
                    <td><%=doc.width|| "N/A"%></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- buy now -->
    
      <div class="fixed-bottom full-width-card" >
        <div class="card custom-card ">
            <!-- <div class="card-body "> -->
              <div class="row ">
                  <%if(addCart){%>
                    <a href="/api/v1/user/cart?cartItem=<%=doc.pid%>" class="col-md-6 btn btn-warning " type="button" >
                        <h3>Cart Now</h3>
                    </a>
                    <%}else{%>
                      <a href="/api/v1/user/viewcart" class="col-md-6 btn btn-primary " type="button" target="_blank">
                          <h3>Go to cart</h3>
                      </a>
                      <%}%>
                    <a href="/api/v1/user/orderCheckOut?pid=<%=doc.pid%>" class="col-md-6 btn btn-danger" type="button" >
                        <h3>Buy Now</h3>
                    </a>
                  
                </div>
               
        </div>
    </div>
        <!-- footer  -->
        <div id="footer">
            
            </div>
    <script src="/footer.js"></script>
    <script src="/demo.js" type="text/javascript"></script>
</body>
</body>

</html> 
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Order Details</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
   
    <!-- "online_payment" --> 
    <h2 class="text-center bg-dark text-white pt-4">Order Details</h2>
    <div class="container mt-3">
        <%if(Object.keys(doc).length !== 0){%>
        <table class="table table-hover">
            <tbody>
                <tr>
                    <td>title</td>
                    <td><%=doc.title%></td>
                </tr>
                
                <tr>
                    <td>Product Name</td>
                        <td><%=doc.producdetails.name%></td>
                    </tr>
                    
                    <tr>
                        <td>Product Price</td>
                        <td><%=doc.producdetails.price%></td>
                    </tr>
                    
                    <tr>
                        <td>Customer Name</td>
                        <td><%=doc.userinfo.fname +' '+doc.userinfo.lname%></td>
                        
                    </tr>
                    
                    <tr>
                        <td>Email</td>
                        <td><%=doc.userinfo.email%></td>
                    </tr>
                    
                    <tr>
                        <td>Customer Phone No</td>
                        <td><%=doc.userinfo.address.phno[0]%></td>
                    </tr>
                    
                    <tr>
                        <td>State</td>
                        <td><%=doc.userinfo.address.state%></td>
                    </tr>
                    
                    <tr>
                        <td>Pincode</td>
                        <td><%=doc.userinfo.address.pincode%></td>
                    </tr>
                   
                    <tr>
                        <td>Delivery Status</td>
                        <td><%=doc.deleivery.delstatus%></td> 
                    </tr>
                    <tr>
                        <td>Payment Method</td>
                        <td><%=doc.paymethod.paymethod%></td>
                    </tr>
                </tbody>
            </table>
            <%}%>
        </div>
        <footer id="footer" class="mt-4"></footer>
        <script src="/footer.js"></script>
    </body>
    
    </html>
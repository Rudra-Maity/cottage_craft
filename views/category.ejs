<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
         .full-width-card {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            margin: 0;
            width: 100%;
            box-shadow: 0px -5px 15px rgba(0, 0, 0, 0.3); /* Add shadow to the bottom */
        }
        a{
            text-decoration: none;
        }
        </style>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
</head>

<body>
    <nav class="navbar bg-body-tertiary shadow-lg p-3 mb-3 bg-body rounded  ">
        <div class="container-fluid">
            <a href="" class="navbar-brand">logo</a>
            <a href="/api/v1/user/viewcart">

                <svg style="width: 26px; height: 26px; margin-left: 40px;" xmlns="http://www.w3.org/2000/svg" width="18"
                    height="18" fill="currentColor" class="bi bi-cart bg-white bg-gradient ml-6 dis"
                    viewBox="0 0 16 16">
                    <path
                        d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
            </a>
            <i class="pd-3 fa fa-search" data-bs-toggle="modal" data-bs-target="#myModal"
                style="font-size:24px;cursor: pointer;"></i>
            <div class="modal" id="myModal">
                <div class="modal-dialog modal-fullscreen">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header ">
                            <div class="form-group form-group-lg">

                                <form action="/search/1" class="d-flex mt-2 navSearch" role="search" name="q">
                                    <input style="border-top: none;    
                            border-left: none;  
                            border-right: none;  
                            border-radius: 0;    
                            outline: none;       
                            box-shadow: none; width: 63vw;" class="form-control navSearch" type="search"
                                        placeholder="Search" aria-label="Search" name="q">
                                    <button class=" btn btn-outline-secondary" type="search">Search</button>
                                </form>
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </nav>
    
    <!-- Slider  -->
    <div id="demo" class=" carousel slide" data-bs-ride="carousel">

        <!-- Indicators/dots -->
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
          <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
          <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
        </div>
    
      <div class="card">
       <% doc.forEach(item => {%>
            <div class="card-body mb-3">
                <div class="row">
                    <div  class="shadow p-3 mb-5 bg-body-tertiary rounded col-sm-3 mb-3 mb-sm-0 border">
                <img class="card-img-top mt-2" src="data:<%= item.images[0].contentType %>;base64, <%= item.images[0].data.toString('base64') %>" alt="<%= item.images[0].imgname %>" alt="gfgf">
                <a href="/api/v1/product/<%=item.pid%>">
                <h5 class="card-title"><%=item.name %></h5>
                <p class="text-primary" style="font-size: 130%;">&#8377; <%=item.price %></p>
                <p class="text-success" style="font-size: 140%; "> <%=item.rating %></p></a>
            </div>
            </div>
          </div>
          <%})%>
         </div>

         <nav class="mt-4 ml-4" aria-label="...">
            <ul class="pagination">
              <% for(let i=1;i<=pageLength;i++){ %>
                <% if(pageLength===page){%>
              <li class="page-item active ml-2"><a class="page-link" href="/?categories=<%= query %>&page=<%=i%>"><%=i%></a>
              </li>
              <%} else{%>
                <li class="page-item"><a class="page-link" href="/?categories=<%= query %>&page=<%=i%>"><%=i%></a>
                </li>
              <%}%>
              <%}%>
            </ul>
          </nav>
        <!-- footer  -->
        <footer id="footer"> </footer>
    <script src="/footer.js"></script>
</body>
</html> 
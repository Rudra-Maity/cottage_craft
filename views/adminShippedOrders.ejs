<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders Page</title>
    <link rel="stylesheet" href="Orders Page.css">
</head>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    header {
        background-color: #35424a;
        color: white;
        padding: 10px 0;
        text-align: center;
    }

    .container {
        max-width: 100%;
        /* margin: 20px auto; */
        padding: 20px;
        background-color: white;
        border-radius: 5px;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
    }

    .order-item {
        border-bottom: 1px solid #ccc;
        padding: 10px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .order-details {
        flex: 1;
        margin-left: 10px;
    }

    .order-title {
        font-size: 20px;
        margin-bottom: 5px;
    }

    .order-price {
        font-size: 16px;
        color: #35424a;
        margin-bottom: 5px;
    }

    .order-status {
        font-size: 14px;
        color: #888;
    }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<body>
    <header>
        <h1>View Shipped Orders</h1>
    </header>
    <div class="container mr-2 mt-4 ">
       <% doc.forEach(item => {%> 
            <div class="order-item">
                <img src="data:<%= item.producdetails.
                images.contentType %>;base64, <%= item.producdetails.images.data.toString('base64') %>" alt="<%= item.producdetails.images.imgname %>"width="100">
                <div class="order-details">
                    <a href="/api/v1/admin/orderDetails/<%=item.oid%>" style="text-decoration: none;">
                        <p class="order-title"><%=item.producdetails.name%></p>
                    </a> <p class="order-price">700</p>
                    <p class="order-status" style="color: blue; font-size: 120%;">Status: Shipped</p>
                </div>

            </div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"
                data-bs-whatever="@mdo"> confirm Delivered</button>
            <hr>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Delivered</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <address><p><%= item.userinfo.address.state + ', ' + item.userinfo.address.district + ', ' + item.userinfo.address.pincode %></p></address>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <a href="/api/v1/admin/deliverd/<%=item.oid%>" type="button" class="btn btn-primary">confirm Deliverd</a>
                    </div>
                </div>
            </div>
        </div>
    <%})%>
    </div>
    <nav class="mt-4 ml-4" aria-label="...">
        <ul class="pagination">
          <% for(let i=1;i<=pageLength;i++){ %>
            <% if(i===page){%>
          <li class="page-item active ml-2"><a class="page-link" href="/api/v1/admin/home/checkOrders/<%=i%>?view=shipped"><%=i%></a>
          </li>
          <%} else{%>
            <li class="page-item"><a class="page-link" href="/api/v1/admin/home/checkOrders/<%=i%>?view=shipped"><%=i%></a>
            </li>
          <%}%>
          <%}%>
        </ul>
      </nav>
    <footer id="footer" class="mt-4"></footer>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
    <script src="/footer.js"></script>
</body>
</html>
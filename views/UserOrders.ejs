<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders Page</title>
    <link rel="stylesheet" href="Orders Page.css">
</head>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
        font-size: 110%;
    }

    header {
        background-color: #35424a;
        color: white;
        padding: 10px 0;
        text-align: center;
    }

    .container {
        max-width: 100%;
        /* margin: 20px auto; */
        padding: 20px;
        background-color: white;
        border-radius: 5px;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
    }

    .order-item {
        border-bottom: 1px solid #ccc;
        padding: 10px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .order-details {
        flex: 1;
        margin-left: 10px;
        text-decoration: none;
    }

    .order-title {
        font-size: 20px;
        margin-bottom: 5px;
    }

    .order-price {
        font-size: 16px;
        color: #35424a;
        margin-bottom: 5px;
    }

    .order-status {
        font-size: 110%;
        color: #888;
    }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<body>
    <header>
        <h1>Orders Page</h1>
    </header>
    <div class="container mr-2 mb-4 mt-4">
        <%doc.forEach(item=> {%>
            <div class="order-item">
                <img src="data:<%= item.producdetails.
images.contentType %>;base64, <%= item.producdetails.
images.data.toString('base64') %>" alt="<%= item.producdetails.
images.imgname %>" width="100">

                <a href="/api/v1/user/order?oid=<%=item.oid%>" class="order-details link-opacity-100-hover">
                    <h3 class="order-title">
                        <%=item.producdetails.name%>
                    </h3>
                    <p class="order-price">
                        <%=item.producdetails.price%>
                    </p>
                    <%if(item.deleivery.delstatus==='confirm'){%>
                        <p class="order-status text-dark">Status:<%=item.deleivery.delstatus%>
                        </p>
                        <p><%=item.paymethod.paymethod%></p>
                        <%} else if(item.deleivery.delstatus==='shipped' ){%>
                            <p class="order-status text-primary">Status: <%=item.deleivery.delstatus%>
                            </p>
                            <p><%=item.paymethod.paymethod%></p>
                            <%} else if(item.deleivery.delstatus==='deliverd' ){%>
                                <p class="order-status text-success">Status: <%=item.deleivery.delstatus%>
                                </p>
                                <p><%=item.paymethod.paymethod%></p>
                                <%} else{%>
                                    <p class="order-status text-danger">Status:<%=item.deleivery.delstatus%>
                                    </p>
                                    <p><%=item.paymethod.paymethod%></p>
                                    <%}%>
                </a>
            </div>
            <%})%>
    </div>
<footer id="footer" class="mt-4"></footer>
<script src="/footer.js"></script>
</body>

</html>